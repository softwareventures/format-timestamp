{
  "name": "@softwareventures/format-timestamp",
  "version": "0.0.0-development",
  "description": "Convert @softwareventures/timestamp to a string in a variety of formats",
  "keywords": [
    "TypeScript",
    "date",
    "format",
    "string",
    "text",
    "time",
    "timestamp"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/format-timestamp",
  "bugs": "https://github.com/softwareventures/format-timestamp/issues",
  "repository": "github:softwareventures/format-timestamp",
  "license": "ISC",
  "scripts": {
    "fix": "tsc --noEmit && eslint . --fix && prettier --write .",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "prepare": "tsc",
    "semantic-release": "semantic-release",
    "test": "ava"
  },
  "engines": {
    "node": "^12 || ^14 || >=16"
  },
  "dependencies": {
    "@softwareventures/array": "^3.10.0 || ^4.0.0 || ^5.0.0",
    "@softwareventures/format-date": "^1.0.0-alpha.1",
    "@softwareventures/timestamp": "^1.0.0-alpha.4",
    "tslib": "2.4.0"
  },
  "devDependencies": {
    "@softwareventures/eslint-config": "4.3.5",
    "@softwareventures/prettier-config": "3.0.0",
    "@softwareventures/semantic-release-config": "2.0.2",
    "@softwareventures/tsconfig": "5.1.1",
    "ava": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.16.0",
    "prettier": "2.6.2",
    "semantic-release": "17.4.7",
    "ts-node": "10.8.1",
    "typescript": "4.7.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/files"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "publishConfig": {
    "access": "public"
  }
}
